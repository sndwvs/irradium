# Description: xorg driver xf86-video-fbdev
# URL: http://xorg.freedesktop.org
# Maintainer: CRUX Xorg Team, xorg-ports at crux dot nu
# Depends on: xorg-server

name=xorg-xf86-video-fbdev
version=0.5.0
release=2
source=(https://www.x.org/releases/individual/driver/xf86-video-fbdev-$version.tar.bz2)

build() {
	cd xf86-video-fbdev-$version

	# riscv64 fix error:
	# [    73.229] (EE) Failed to load /usr/lib/xorg/modules/drivers/fbdev_drv.so: /usr/lib/xorg/modules/drivers/fbdev_drv.so: undefined symbol: fbdevHWSave
	export LDFLAGS=${LDFLAGS/,-z,now/}

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
