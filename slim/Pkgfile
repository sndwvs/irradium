# Description: Simple Login Manager
# URL: https://sourceforge.net/projects/slim
# Maintainer: mara, mara at fail dot pp dot ua
# Depends on: libx11 libxft libxrender libxrandr libxmu freetype2 libjpeg-turbo libpng zlib consolekit2 linux-pam

name=lightdm
version=1.4.0
release=1
source=(https://sourceforge.net/projects/${name}-fork/files/$name-$version.tar.gz
        $name $name.pam)

build(){
  cd $name-$version

  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_C_FLAGS_RELEASE="$CFLAGS" \
    -DCMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
    -DUSE_CONSOLEKIT=yes \
    -DUSE_PAM=yes \
    -Wno-dev
    cmake --build build
    DESTDIR=$PKG cmake --install build

  install -Dm644 $SRC/$name.pam $PKG/etc/pam.d/$name
  install -D -m 755 $SRC/$name $PKG/etc/rc.d/$name

}
# description	: Simple Login Manager
# depends	: libx11 libxft libxrender libxrandr libxmu freetype2 libjpeg-turbo libpng zlib consolekit2 linux-pam

name=slim
version=1.4.0
release=1
backup="etc/slim.conf"
source="https://sourceforge.net/projects/${name}-fork/files/$name-$version.tar.gz
	rc.slim
	$name.pam
	run"

build() {
	cd $name-$version
	
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_LIBEXECDIR=lib \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_C_FLAGS_RELEASE="$CFLAGS" \
		-DCMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
		-DUSE_CONSOLEKIT=yes \
		-DUSE_PAM=yes \
		-Wno-dev 
	cmake --build build
	DESTDIR=$PKG cmake --install build

	install -Dm644 $SRC/$name.pam $PKG/etc/pam.d/$name
	        	
	# rc service
	install -Dm755 $SRC/rc.$name $PKG/etc/rc.d/$name

	# runit service
	install -Dm755 $SRC/run $PKG/etc/sv/$name/run
	ln -s /run/runit/supervise.$name $PKG/etc/sv/$name/supervise
}
