# Description: Meta-build system that generates build files for Ninja
# URL: https://gn.googlesource.com/gn
# Maintainer: mara, mara at fail dot pp dot ua
# Depends on: python3 zstd

name=gn
version=20240405
release=1
source=(https://s3.sakamoto.pl/lnl-aports-snapshots/$name-415b3b19e094cd4b6982147693485df65037f942.tar.zst)

build() {
    tar xf $SRC/$name-*.tar.zst
    cd $name

    python3 ./build/gen.py \
        --no-last-commit-position \
        --no-static-libstdc++ \
        --no-strip \
        --allow-warnings
    ninja -C out

   install -Dm755 out/gn $PKG/usr/bin/gn
}
