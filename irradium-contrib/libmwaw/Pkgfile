# Description: Import library for some old mac text documents.
# URL: https://sourceforge.net/projects/libmwaw/
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: librevenge

name=libmwaw
version=0.3.22
release=1
source=(https://sourceforge.net/projects/$name/files/$name/$name-$version/$name-$version.tar.xz
  libmwaw-bundled-soname.patch.0
  rpath.patch)

build() {
  cd $name-$version

  patch -Np0 -i $SRC/libmwaw-bundled-soname.patch.0
  patch -Np0 -i $SRC/rpath.patch

  ./configure --prefix=/usr \
    --build=$(uname -m)-unknown-linux-gnu
  make
  make DESTDIR=$PKG install

  rm -fr $PKG/usr/share
}
