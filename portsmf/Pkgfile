# Description: library for reading and writing Standard MIDI Files
# URL: https://github.com/tenacityteam/portsmf
# Maintainer: mara, mara at fail dot pp dot ua
# Depends on: gcc glibc

name=portsmf
version=239
release=1
source=(https://codeberg.org/tenacityteam/$name/archive/$version.tar.gz)

build() {
  cmake -S $name -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_C_FLAGS_RELEASE="$CFLAGS" \
    -DCMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
    -Wno-dev
  cmake --build build
  DESTDIR=$PKG cmake --install build
}
